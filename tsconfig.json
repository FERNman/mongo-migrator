{
  "compilerOptions": {
    /* Basic Options */
    // "incremental": true,
    "target": "es2017",
    "module": "commonjs",
    "outDir": "dist",
    "declaration": true,

    /* Strict Type-Checking Options */
    "strict": true,

    /* Additional Checks */
    "noImplicitReturns": true,

    /* Module Resolution Options */
    "esModuleInterop": true,

    /* Advanced Options */
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  }
}
